{
  "name": "backend-grerin",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "scripts": {
    "start": "cross-env PORT=4000 nodemon --watch './src/**/*.ts' --exec ts-node ./src/index.ts",
    "lint": "npx eslint --debug src/ --fix",
    "prettier": "prettier --config .prettierrc.json --write src/**/*.ts",
    "lint:fix": "npm run lint && npm run prettier",
    "prepare": "husky install",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js --config=src/common/ormconfig.ts",
    "migration:create": "npm run typeorm migration:create -- -n MigrationFile",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.18.1",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^6.13.0",
    "generate-password": "^1.7.0",
    "helmet": "^6.0.0",
    "http-errors": "^1.8.1",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.7.3",
    "mongoose": "^6.6.5",
    "nodemon": "^2.0.14",
    "pg": "^8.7.1",
    "redis": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.38",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/express-serve-static-core": "^4.17.21",
    "@types/node": "^15.14.9",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.1",
    "ts-node": "^10.4.0",
    "typescript": "^3.5.1"
  }
}
